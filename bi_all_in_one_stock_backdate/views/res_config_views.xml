<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//div[@data-key='account']/h2[3]" position="before">
                <h2> Account Backdate Settings</h2>
                <group>
                    <div>
                        <div class="row mt4  o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_backdate" />
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="enable_backdate"/>
                                </div>
                            </div>      
                            <div class="col-12 col-lg-6 o_setting_box" >
                                <div class="o_setting_left_pane" >
                                    <field name="enable_remark" attrs="{'invisible': [('enable_backdate', '=', False)]}"/>
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="enable_remark" attrs="{'invisible': [('enable_backdate', '=', False)]}"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="inv_remark" attrs="{'invisible': ['|',('enable_backdate', '=', False),('enable_remark', '=',False)]}"/>
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="inv_remark" attrs="{'invisible':['|',('enable_backdate', '=', False),('enable_remark', '=',False)]}"/>
                                </div>
                            </div>
                        </div>        
                        <div class="row mt4  o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="enable_payment"/>
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="enable_payment"/>
                                </div>
                            </div>    
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="payment_remark" attrs="{'invisible': [('enable_payment', '=', False)]}"/>
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="payment_remark" attrs="{'invisible': [('enable_payment', '=', False)]}"/>
                                </div>
                            </div>    
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="pay_remark" attrs="{'invisible': ['|',('enable_payment', '=', False),('payment_remark', '=',False)]}"/>
                                </div>
                                <div class="o_setting_right_pane">
                                   <label for="pay_remark" attrs="{'invisible': ['|',('enable_payment', '=', False),('payment_remark', '=',False)]}"/>
                                </div>
                            </div>
                        </div> 
                    </div>              
                                          
                </group>            
            </xpath>                       
        </field>
    </record>                 
</odoo>    




