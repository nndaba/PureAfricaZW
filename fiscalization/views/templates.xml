<odoo>
    <data>


      <template id="fiscalization_report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//th[@name='th_taxes']" position="after">
            <th name="th_tax_amount" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Tax Amount</span></th>
        </xpath>

        <xpath expr="//h2" position="after">
            <div class="row">
                <div class="col-6">
                    <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                </div>
                <div class="col-6 text-right">
                    <strong>Customer TIN:</strong>
                    <span t-field="o.partner_id.vat"/><br/>
                    <strong>Customer VAT:</strong>
                    <span t-field="o.partner_id.x_studio_new_vat"/><br/>
                </div>
            </div>
        </xpath>

          <xpath expr="//h2//span[1]" position="replace">
              <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Fiscal Tax Invoice :</span>
          </xpath>
         
       
          <xpath expr="//div[@class='clearfix']" position="after">
            <div class="row">
            <!-- Left Side: QR Code -->
            <div class="col-6">
                <div style="display: flex; justify-content: center; align-items: center; height: 100%;">
                    <span>
                        <img t-att-src="'/report/barcode/QR/'+str(o.fiscal_signature)" style="width:200px;height:200px" alt="Barcode"/>
                    </span>
                </div>
            </div>
            <!-- Right Side: Text -->
            <div class="col-6">
                <div style="display: flex; flex-direction: column; justify-content: center; align-items: flex-start; height: 100%; padding-left: 50px;">
                    <div>
                        <strong>Fiscalization Date:</strong>
                        <span t-field="o.fiscal_date"/>
                    </div>
                    <div>
                        <strong>Device Id:</strong>
                        <span t-field="o.device_id"/>
                    </div>
                    <div>
                        <strong>Receipt Global Number:</strong>
                        <span t-field="o.rgn"/>
                    </div>
                    <div>
                        <strong>Receipt number:</strong>
                        <span t-field="o.receiptnumber"/>
                    </div>
                    <div>
                        <strong>Fiscal Day:</strong>
                        <span t-field="o.fiscalday"/>
                    </div>
                    <div>
                        <strong>Verification Code:</strong>
                        <span t-field="o.VerificationCode"/>
                    </div>
                    <div>
                        <strong>Signature:</strong>
                        <span t-field="o.fiscal_signature"/>
                    </div>
                </div>
              </div>
        </div>
        
          </xpath>

          
        
      </template>
    </data>
</odoo>
