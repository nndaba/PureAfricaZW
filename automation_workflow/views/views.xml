<odoo>
  <data>

    <record id="view_purchase_order_form" model="ir.ui.view">
      <field name="name">purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/> 
      <field name="arch" type="xml">
          <div name="button_box" position="inside">
              
              <button class="oe_stat_button" type="object" name="view_receipt" icon="fa-truck" attrs="{'invisible': [('is_import', '=', False)]}">
                  <span class="o_stat_text">Receipts</span>
              </button>
               <button class="oe_stat_button" type="object" name="view_invoice_action" icon="fa-edit" attrs="{'invisible': [('is_import', '=', False)]}">
                 <span class="o_stat_text">Invoices</span>
              </button>
              <field name="is_import" invisible="0" />
            </div>
      </field>
    </record>

    <record id="view_sale_order_form_button" model="ir.ui.view">
      <field name="name">sale.order.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/> 
      <field name="arch" type="xml">
          <div name="button_box" position="inside">
              
              <button class="oe_stat_button" type="object" name="view_sale_receipt" icon="fa-truck" attrs="{'invisible': [('is_import', '=', False)]}">
                  <span class="o_stat_text">Receipts</span>
              </button>
               <button class="oe_stat_button" type="object" name="view_sale_invoice_action" icon="fa-edit" attrs="{'invisible': [('is_import', '=', False)]}">
                 <span class="o_stat_text">Invoices</span>
              </button>
              <field name="is_import" invisible="0" />
            </div>
      </field>
    </record>


     
  </data>
</odoo>